{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "availabilityZones": {
            "type": "array"
        },
        "location": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ]
        },
        "imageName": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "numberCpuCores": {
            "type": "string"
        },
        "memory": {
            "type": "string"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ]
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Confidential"
            ]
        },
        "imageRegistryLoginServer": {
            "type": "string"
        },
        "imageUsername": {
            "type": "string"
        },
        "imagePassword": {
            "type": "secureString"
        },
        "environmentVariable_cr_target_port": {
            "type": "string"
        },
        "environmentVariable_flask_key": {
            "type": "secureString"
        },
        "ipAddressType": {
            "type": "string"
        },
        "ports": {
            "type": "array"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "zones": "[parameters('availabilityZones')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "PORT",
                                    "value": "[parameters('environmentVariable_cr_target_port')]"
                                },
                                {
                                    "name": "FLASK_KEY",
                                    "secureValue": "[parameters('environmentVariable_flask_key')]"
                                }
                            ],
                            "ports": "[parameters('ports')]"
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "sku": "[parameters('sku')]",
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('imageRegistryLoginServer')]",
                        "username": "[parameters('imageUsername')]",
                        "password": "[parameters('imagePassword')]"
                    }
                ],
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]"
                }
            },
            "tags": {}
        }
    ]
}
